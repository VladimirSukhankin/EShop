@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Вход в сервисы Villagio";
}
@model EShopFanerum.AuthService.Models.Account.LoginVm
<h1>
    Villagio
    <sub>Добро пожаловать в Villagio, введите номер вашего мобильного телефона, чтобы войти или зарегистрироваться</sub>
</h1>
@if(Model.Err?.Length is > 0)
{
    <div class="err">@Model.Err</div>
}
@if(Model.EnableLocalLogin is true)
{
    <form class="sub-container" asp-controller="account" asp-action="emailDo" method="post">
        <label for="email">Почта</label>
        <input type="email" id="email" asp-for="@Model.Email" autofocus />
        <input type="hidden" asp-for="@Model.ReturnUrl" />
        <input type="hidden" asp-for="@Model.EnableLocalLogin" />
        <button type="submit">Продолжить</button>
    </form>
    <p>
        Нажимая кнопку «Продолжить», вы соглашаетесь
    </p>
}
else
{
    <div class="err">Ошибка, некорректный запрос на вход, отсутствуют доступные для входа схемы.</div>
}