{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": [
      {
        "Name": "Information"
      },
      {
        "Name": "Override",
        "Args": {
          "source": "Microsoft",
          "minimumLevel": "Error"
        }
      },
      {
        "Name": "Override",
        "Args": {
          "source": "System",
          "minimumLevel": "Error"
        }
      },
      {
        "Name": "Override",
        "Args": {
          "source": "Microsoft.AspNetCore.Authentication",
          "minimumLevel": "Information"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{NewLine}{Timestamp:HH:mm:ss} [{Level}] {SourceContext} ({CorrelationToken}) {NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "restrictedToMinimumLevel": "Verbose"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=5432;User ID=postgres;Database=auth_service;Password=1;TrustServerCertificate=True"
  }
}